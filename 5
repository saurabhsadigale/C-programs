#include<stdio.h>
void main()
{
    int p,c,m,t;
    float avg;
    printf("Enter the marks in physics=");
    scanf("%d",&p);
    printf("\nEnter the marks in chemistry=");
    scanf("%d",&c);
    printf("\nEnter the marks in maths=");
    scanf("%d",&m);
    t=p+c+m;
    printf("\nTotal marks=%d",t);
    avg=(p+c+m)/3;
    printf("\nAverage marks=%f",avg);
    
}
